@model QLCoffee.Models.NhanVienViewModel

@{
    ViewData["Title"] = "Index";
}

 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="QLNhanViens" asp-action="Index" method="get">
    <p>
        <select asp-for="NhanVienGenre" asp-items="Model.GioiTinh">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NhanViens![0].TenNhanVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanViens![0].NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanViens![0].GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanViens![0].ChucVu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanViens![0].Luong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanViens![0].SoDienThoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NhanViens!)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Luong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
